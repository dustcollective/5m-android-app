<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/detailRoot"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

                <com.hanacek.android.utilLib.ui.view.PresetSizeImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/image"
                    style="@style/listItemImage"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    style="@style/listItemBottomLabel"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/headline"
                        style="@style/listItemBottomLabelHeadline"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/date"
                        android:layout_alignParentBottom="true"
                        style="@style/listItemBottomLabelDate"
                        />

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/body"
                style="@style/detailBody"
                />

        </LinearLayout>

        <ProgressBar
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="gone"
            android:id="@+id/progress"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

</ScrollView>
