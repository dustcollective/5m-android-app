<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

    <com.hanacek.android.utilLib.ui.view.PresetSizeImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/image"
        style="@style/listItemImage"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        style="@style/listItemBottomLabel"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/headline"
            style="@style/listItemBottomLabelHeadline"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            android:layout_alignParentBottom="true"
            style="@style/listItemBottomLabelDate"
            />

        <ImageView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            style="@style/listItemBottomLabelButton"
            />

    </RelativeLayout>

</RelativeLayout>